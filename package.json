{
  "name": "simple-material-time",
  "version": "0.1.0",
  "description": "A small and simple time picker based on google material UI",
  "main": "index.js",
  "scripts": {
    "build-html-template": "node ./tools/buildHtmlTemplate.js",
    "build-unit-tests": "node \"./node_modules/typescript/lib/tsc.js\" -p \"./test.tsconfig.json\"",
    "mocha-unit-test": "mocha \"./testBin/**/*.js\"",
    "unit-test": "npm run build-unit-tests && npm run mocha-unit-test",
    "develop": "node \"./node_modules/webpack/bin/webpack.js\" --config \"./webpack/dev.config.js\" --watch",
    "build-dev": "node \"./node_modules/webpack/bin/webpack.js\" --config \"./webpack/dev.config.js\"",
    "build-prod": "node \"./node_modules/webpack/bin/webpack.js\" --config \"./webpack/production.config.js\"",
    "build": "npm run build-html-template && npm run build-dev && npm run build-prod"
  },
  "keywords": [
    "ui",
    "material",
    "timepicker",
    "time"
  ],
  "author": "Shane Connon",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "awesome-typescript-loader": "^5.0.0",
    "chai": "^4.1.2",
    "css-loader": "^0.28.11",
    "mocha": "^5.1.1",
    "style-loader": "^0.21.0",
    "typescript": "^2.8.3",
    "webpack": "^4.7.0",
    "webpack-cli": "^2.1.2",
    "webpack-merge": "^4.1.2"
  }
}
